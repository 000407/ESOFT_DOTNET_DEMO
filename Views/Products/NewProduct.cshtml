@{
    ViewBag.Title = "New Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <form method="POST" action="@Url.Link("create_new_product", new {})">
                <div class="form-group">
                    <label for="txtProductName">Name</label>
                    <input type="text" name="Name" class="form-control" id="txtProductName" aria-describedby="productNameHelp">
                </div>
                <div class="form-group">
                    <label for="txtProductPrice">Price</label>
                    <input type="text" name="Price"  class="form-control" id="txtProductPrice" />
                </div>
                <div class="form-group button-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
        <div class="col-3"></div>
    </div>
</div>

@if (ViewBag.Message != null) {
    <div>@ViewBag.Message.Text</div>
} 
