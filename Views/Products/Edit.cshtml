@model demo_crud.Models.Product

@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title: @ViewBag.Id</h2>

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            @if(Model != null) {
            <form method="POST" action="@Url.Link("product_update", null)">
                <input type="hidden" name="Id" id="txtProductId" value="@Model.Id">
                <div class="form-group">
                    <label for="txtProductName">Name</label>
                    <input type="text" name="Name" class="form-control" id="txtProductName" aria-describedby="productNameHelp" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label for="txtProductPrice">Price</label>
                    <input type="text" name="Price"  class="form-control" id="txtProductPrice" value="@Model.Price" />
                </div>
                <div class="form-group button-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
            } else {
            <h4 align="center">No Product was found for ID: @ViewBag.Id</h4>
            }
        </div>
        <div class="col-3"></div>
    </div>
</div>

@if (ViewBag.Message != null) {
    <div>@ViewBag.Message.Text</div>
} 

